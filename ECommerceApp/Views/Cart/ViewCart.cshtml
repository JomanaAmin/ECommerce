@model CartViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewCart</title>
</head>
<body>
    <h2 class="container-md mt-3 display-5">Shopping Cart</h2>
    @{

        if(Model.cart==null)
        {
            <p class="display-6">Your cart is empty!</p>
        }
        else
        {
            
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        foreach(CartItem cartItem in Model.cart.GetCartItems())
                        {
                            <tr>
                                <td>@cartItem.Item.Name</td>
                                <td>@cartItem.Item.Price</td>
                                <td>@cartItem.Quantity</td>
                                <td><a class="btn btn-danger" href="/Cart/RemoveItemFromCart?id=@cartItem.CartItemId">Remove</a></td>
                            </tr>

                        }
                    }
                    <tr>
                        <td>Total </td>
                        <td>@Model.total EGP</td>
                    </tr>
                </tbody>
            </table>
        }

    }

</body>
</html>
